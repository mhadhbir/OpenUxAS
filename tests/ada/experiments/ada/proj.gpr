with "../../../../src/ada/afrl_ada_dev.gpr";

project Proj is

   for Languages use ("Ada", "c");

   for Main use ("main.adb");

   for Source_Dirs use (".");
   for Object_Dir  use "obj";
   for Exec_Dir    use "../bin";


   package Builder is
      for Executable ("main.adb") use "main_ada";
   end Builder;

   package Compiler is
     for Switches ("Ada") use ("-gnat2022", "-ffunction-sections", "-gnata");

     for Default_Switches ("C") use ("-pedantic", "-g");
   end compiler;

   package Linker is
     for Switches ("Ada") use ("-Wl,--gc-sections");
   end Linker;

end Proj;
